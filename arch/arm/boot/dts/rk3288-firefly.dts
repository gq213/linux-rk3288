/dts-v1/;
#include "rk3288-firefly.dtsi"

/ {
	model = "Firefly-RK3288";
	compatible = "firefly,firefly-rk3288", "rockchip,rk3288";

	chosen {
		bootargs = "earlycon=uart8250,mmio32,0xff690000 console=ttyS2,115200n8 noinitrd root=PARTLABEL=new_rootfs rootfstype=squashfs rootwait init=/linuxrc ignore_loglevel";
	};

	display-subsystem {
		status = "okay";
	};
};

&vopb {
	status = "okay";
};

&vopb_mmu {
	status = "okay";
};

&hdmi {
	ddc-i2c-bus = <&i2c5>;
	status = "okay";
};

&i2c5 {
	status = "okay";
};
